{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["vitest/importMeta"],
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src", "tests", "vitest.config.ts", "vite.config.ts"]
}
